{
  "name": "@org/demo",
  "main": "dist/index",
  "scripts": {
      "build": "tsc && copyfiles -u 1 src/**/*.scss dist",
      "test": "jest"
  },
  "jest": {
      "testURL": "http://localhost",
      "reporters": [
          "default"
      ],
      "coverageReporters": [
          "json"
      ],
      "collectCoverage": true,
      "coverageDirectory": "./jest-reports/coverage",
      "coverageThreshold": {
          "global": {
              "branches": 90,
              "functions": 90,
              "lines": 90,
              "statements": 5
          }
      },
      "collectCoverageFrom": [
          "src/**/*.{ts,tsx}"
      ],
      "coveragePathIgnorePatterns": [
          "<rootDir>/node_modules",
          "!*.d.ts"
      ],
      "testEnvironment": "jsdom",
      "setupFilesAfterEnv": ["<rootDir>/testSetup.js"],
      "moduleNameMapper": {
          "\\.(css|scss)$": "identity-obj-proxy"
      },
      "transform": {
          "^.+\\.(ts|tsx)$": "ts-jest"
      },
      "testPathIgnorePatterns": [
          "<rootDir>/node_modules"
      ],
      "transformIgnorePatterns": [
          "<rootDir>/node_modules"
      ],
      "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(tsx|ts)$",
      "moduleFileExtensions": [
          "tsx",
          "ts",
          "js",
          "jsx"
      ],
      "haste": {
          "providesModuleNodeModules": [
              "@org"
          ]
      }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
      "classnames": "*",
      "react": "*",
      "react-dom": "*"
  },
  "devDependencies": {
      "jest": "*",
      "enzyme": "*",
      "enzyme-adapter-react-16": "*",
      "ts-jest": "*",
      "react-test-renderer": "*",
      "identity-obj-proxy": "*",
      "typescript": "*",
      "copyfiles": "*"
  },
  "peerDependencies": {
      "node-sass": "*"
  }
}